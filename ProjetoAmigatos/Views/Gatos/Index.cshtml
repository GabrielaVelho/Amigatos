@model IEnumerable<ProjetoAmigatos.Models.Gato>

@{
    ViewBag.Title = "Index";
}

<br /> <br /> <br /> <br />
<img src="~/Images/amigatos.jpg" />

<br />
<p>
    @Html.ActionLink("Cadastrar AmiGatos", "Create")
</p>

@using (Html.BeginForm()) {
    <p>
        Selecione a raça: @Html.DropDownList("SelectedRaca", "Todas")
        <input type="submit" value="Filter" />
    </p>
}


<table class="table">
    <tr>
        <th>
            Amigato
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Raca.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th>
            Opções
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                <img width="200" src="@Url.Action("GetImage", "Gatos", new {id=item.GatoID})">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raca.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.ActionLink("Adote", "Adotar", new { id=item.GatoID }, new { @class = "glyphicon glyphicon-heart-empty" }) |
                @Html.ActionLink("Detalhes", "Details", new { id=item.GatoID }, new { @class = "glyphicon glyphicon-info-sign" }) |
                @Html.ActionLink("Editar", "Edit", new { id = item.GatoID }, new { @class= " glyphicon glyphicon-pencil" }) |
                @Html.ActionLink(" ", "Delete", new { id=item.GatoID }, new { @class = "glyphicon glyphicon-trash" })


            </td>
        </tr>
    }

</table>
